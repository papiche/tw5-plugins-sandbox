title: $:/plugins/sq/chatgptimporter/styles
tags: $:/tags/Stylesheet

.chatgpt-conversation {
	border: 1px solid black;
	padding: 20px;
}
.chatgpt-message > div > p:first-child {
	margin: 0;
}
.chatgpt-message {
	white-space: pre-wrap;
	margin: 5px 0;
	border: none;
	background: transparent;
}
.chatgpt-conversation .author {
	font-weight: bold;
	margin-bottom: 4px;
}

.chatgpt-conversation .author::first-letter {
	text-transform: uppercase;
}
